@model List<StudentManagement.Models.Student>
<h2 class="mb-4">Faculty Dashboard</h2>
<h3>Student List</h3>
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Class</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Class</td>
                <td>@student.Role</td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="ViewCourses" class="btn btn-primary">View All Courses</a>
<a asp-controller="Account" asp-action="Logout" class="btn btn-outline-danger mt-2">Logout</a>